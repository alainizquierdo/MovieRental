<Window x:Class="RentalsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Movies">
                <StackPanel Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Button Content="Get Data" Margin="5" Width="100" Height="30" HorizontalAlignment ="Left" VerticalAlignment="Top" Click="Button_Click"/>
                        <Button Content="Insert" Margin="5" Width="100" Height="30" HorizontalAlignment ="Left" VerticalAlignment="Top" Click="Insert_Click"/>
                    </StackPanel>
                    <DataGrid ItemsSource="{Binding Movies}"  x:Name="MoviesDataGrid" AutoGenerateColumns="True" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    
                </StackPanel>
            </TabItem>
          
        </TabControl>


    </Grid>
</Window>
